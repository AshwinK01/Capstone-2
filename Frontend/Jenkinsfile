pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/AshwinK01/Capstone-2.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }
        stage('Build Project') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('frontend') {
                    sh 'docker build -t malware_classifier .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker stop malware_classifier || true && docker rm malware_classifier || true'
                sh 'docker run -d -p 3000:3000 --name malware_classifier malware_classifier'
            }
        }
    }
}
