pipeline {
    agent any

    stages {
        stage('Initialize') {
            steps {
                echo 'Starting pipeline...'
            }
        }

        stage('Run Background Task') {
            steps {
                // Run the background script without nohup
                script {
                    bat '''
                        REM Running the task in the background
                        start /B cmd /c "long_running_task.bat"
                    '''
                }
            }
        }

        stage('Verify Process') {
            steps {
                // Ensure the process is running or completed
                script {
                    bat '''
                        REM Check if the task is running (example: replace with specific check)
                        tasklist | findstr long_running_task.bat
                    '''
                }
            }
        }

        stage('Complete') {
            steps {
                echo 'Pipeline completed!'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up after the pipeline.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
