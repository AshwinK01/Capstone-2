pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_FILE = "docker-compose.yml"
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Ensure Git is properly configured
                    checkout([$class: 'GitSCM', 
                              branches: [[name: '*/main']], 
                              userRemoteConfigs: [[url: 'https://github.com/AshwinK01/Capstone-2']]])
                }
            }
        }

        stage('Build and Run Docker Compose') {
            steps {
                script {
                    // Use 'docker-compose' commands compatible with both Linux and Windows
                    if (isUnix()) {
                        sh 'docker-compose down || true' // Ensure the command doesn't fail if no containers are running
                        sh 'docker-compose up --build -d'
                    } else {
                        bat 'docker-compose down || exit 0' // Windows-compatible
                        bat 'docker-compose up --build -d'
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                // Clean up Docker containers after the job
                if (isUnix()) {
                    sh 'docker-compose down || true'
                } else {
                    bat 'docker-compose down || exit 0'
                }
            }
        }
    }
}
